mod1: employee information
FUNCTION get_employee_info
print "enter password"
input password
print "enter employee first_name"
input firstname
print "enter employee last_name"
input lastname
print "enter employee_id"
input employee_id
print "number_of_dependents"
input numOfdependents
print "hours worked"
input hoursworked
call get_hourly_rate_from_db
return hourly_rate
return first_name, last_name, employee_id, num_dependents, hours_worked, hourly_rate
END FUNCTION
FUNCTION get_password
    prompt "enter password"
    set password = ""
WHILE TRUE
READ character
IF character = enter 
THEN break
END IF
    append character to password
    print "*"
END IF
RETURN password
END FUNCTION
